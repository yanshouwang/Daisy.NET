<Window x:Class="HelloWorld.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbShowHello" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" RenderTransformOrigin="0.583,0.856"/>
        <Button x:Name="btnSayHello" Content="Click" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Width="780" Click="btnSayHello_Click"/>

    </Grid>
</Window>
